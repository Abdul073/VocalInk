{
  "openapi": "3.0.0",
  "info": {
    "title": "VocalInk Blog Platform API",
    "version": "1.0.0",
    "description": "API documentation for VocalInk, a next-gen Medium-style blog platform with AI, gamification, and admin features."
  },
  "servers": [
    { "url": "http://localhost:5000/api" }
  ],
  "tags": [
    { "name": "Auth" },
    { "name": "User" },
    { "name": "Blog" },
    { "name": "Comment" },
    { "name": "Series" },
    { "name": "Gamification" },
    { "name": "Admin" },
    { "name": "Notification" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "60f7c0b8e1d2c8a1b8e1d2c8" },
          "name": { "type": "string", "example": "Akash Kumar" },
          "email": { "type": "string", "example": "akash@email.com" },
          "password": { "type": "string", "example": "hashedpassword" },
          "role": { "type": "string", "enum": ["reader", "writer", "admin"], "example": "writer" },
          "bio": { "type": "string", "example": "Tech enthusiast and writer." },
          "avatar": { "type": "string", "example": "https://cloudinary.com/avatar.jpg" },
          "socialLinks": { "type": "array", "items": { "type": "string" } },
          "xp": { "type": "integer", "example": 1200 },
          "badges": { "type": "array", "items": { "$ref": "#/components/schemas/Badge" } },
          "followers": { "type": "array", "items": { "type": "string" } },
          "following": { "type": "array", "items": { "type": "string" } },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Blog": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "title": { "type": "string", "example": "How to Build a Blog Platform" },
          "content": { "type": "string", "example": "This is the blog content..." },
          "summary": { "type": "string", "example": "A quick guide to building a blog platform." },
          "author": { "$ref": "#/components/schemas/User" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "coverImage": { "type": "string", "example": "https://cloudinary.com/cover.jpg" },
          "seriesId": { "type": "string" },
          "status": { "type": "string", "enum": ["draft", "published", "private"], "example": "published" },
          "mood": { "type": "string", "example": "motivational" },
          "language": { "type": "string", "example": "en" },
          "ttsUrl": { "type": "string", "example": "https://cloudinary.com/audio.mp3" },
          "likes": { "type": "integer", "example": 10 },
          "bookmarks": { "type": "integer", "example": 5 },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "blogId": { "type": "string" },
          "userId": { "type": "string" },
          "content": { "type": "string", "example": "Great post!" },
          "parentId": { "type": "string" },
          "inlineRef": { "type": "string", "example": "paragraph-2" },
          "createdAt": { "type": "string", "format": "date-time" },
          "status": { "type": "string", "enum": ["active", "deleted", "reported"], "example": "active" }
        }
      },
      "Series": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "title": { "type": "string", "example": "Startup Journey" },
          "description": { "type": "string", "example": "A series about building a startup." },
          "authorId": { "type": "string" },
          "blogs": { "type": "array", "items": { "type": "string" } },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "Badge": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string", "example": "Top Commenter" },
          "description": { "type": "string", "example": "Awarded for most comments in a week." },
          "icon": { "type": "string", "example": "https://cloudinary.com/badge.png" },
          "criteria": { "type": "string", "example": "Commented on 10 blogs" }
        }
      },
      "Notification": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "userId": { "type": "string" },
          "type": { "type": "string", "example": "comment" },
          "content": { "type": "string", "example": "You have a new comment." },
          "read": { "type": "boolean", "example": false },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "AbuseReport": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "reporterId": { "type": "string" },
          "targetId": { "type": "string" },
          "type": { "type": "string", "example": "comment" },
          "reason": { "type": "string", "example": "Spam or abuse" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" },
                  "name": { "type": "string" },
                  "role": { "type": "string", "enum": ["reader", "writer", "admin"] }
                },
                "required": ["email", "password", "name"]
              },
              "example": {
                "email": "user@example.com",
                "password": "StrongPassword123!",
                "name": "Akash Sahu",
                "role": "reader"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Registration successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "userId": { "type": "string" },
                    "verificationToken": { "type": "string" }
                  }
                },
                "example": {
                  "success": true,
                  "message": "Registration successful. Please check your email for verification.",
                  "userId": "687e8816acec10414c96c133",
                  "verificationToken": "387179-1753122838530"
                }
              }
            }
          },
          "400": { "description": "Invalid input" },
          "409": { "description": "Email already registered" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              },
              "example": {
                "email": "akash@email.com",
                "password": "Password123!"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" },
                    "user": { "$ref": "#/components/schemas/User" }
                  }
                },
                "example": {
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                  "user": {
                    "_id": "60f7c0b8e1d2c8a1b8e1d2c8",
                    "name": "Akash Kumar",
                    "email": "akash@email.com",
                    "role": "writer"
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/auth/social": {
      "post": {
        "tags": ["Auth"],
        "summary": "Social login (Google, LinkedIn)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "provider": { "type": "string" },
                  "token": { "type": "string" }
                },
                "required": ["provider", "token"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Social login successful" }
        }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Request password reset",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Reset email sent" }
        }
      }
    },
    "/auth/reset-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Reset password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" },
                  "newPassword": { "type": "string" }
                },
                "required": ["token", "newPassword"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Password reset successful" }
        }
      }
    },
    "/auth/verify-email": {
      "post": {
        "tags": ["Auth"],
        "summary": "Verify user email with code and token",
        "security": [],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" },
            "description": "Bearer <verificationToken>"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "code": { "type": "string" }
                },
                "required": ["email", "code"]
              },
              "example": {
                "email": "user@example.com",
                "code": "387179"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email verified successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "success": true,
                  "message": "Email verified successfully"
                }
              }
            }
          },
          "400": { "description": "Invalid input" },
          "401": { "description": "Invalid or expired verification token" }
        }
      }
    },
    "/auth/resend-verification": {
      "post": {
        "tags": ["Auth"],
        "summary": "Resend email verification code and token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" }
                },
                "required": ["email"]
              },
              "example": {
                "email": "user@example.com"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Verification code resent",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "verificationToken": { "type": "string" }
                  }
                },
                "example": {
                  "success": true,
                  "message": "Verification code resent successfully. Please check your email.",
                  "verificationToken": "387179-1753122838530"
                }
              }
            }
          },
          "400": { "description": "Invalid input" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["User"],
        "summary": "Get user profile",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "User profile" }
        }
      },
      "put": {
        "tags": ["User"],
        "summary": "Update user profile",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "bio": { "type": "string" },
                  "avatar": { "type": "string" },
                  "socialLinks": { "type": "array", "items": { "type": "string" } }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Profile updated" }
        }
      }
    },
    "/users/{id}/blogs": {
      "get": {
        "tags": ["User"],
        "summary": "Get user's blogs",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "List of user's blogs" }
        }
      }
    },
    "/users/{id}/notifications": {
      "get": {
        "tags": ["User"],
        "summary": "Get user notifications",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "List of notifications" }
        }
      }
    },
    "/users/{id}/badges": {
      "get": {
        "tags": ["User"],
        "summary": "Get user badges",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "List of badges" }
        }
      }
    },
    "/users/{id}/leaderboard": {
      "get": {
        "tags": ["User"],
        "summary": "Get user leaderboard position",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Leaderboard info" }
        }
      }
    },
    "/blogs": {
      "get": {
        "tags": ["Blog"],
        "summary": "Get blog feed (with filters, search, mood)",
        "parameters": [
          { "name": "tag", "in": "query", "schema": { "type": "string" } },
          { "name": "mood", "in": "query", "schema": { "type": "string" } },
          { "name": "search", "in": "query", "schema": { "type": "string" } },
          { "name": "sort", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "List of blogs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Blog" }
                },
                "example": [
                  {
                    "_id": "blogid1",
                    "title": "How to Build a Blog Platform",
                    "summary": "A quick guide to building a blog platform.",
                    "author": {
                      "_id": "60f7c0b8e1d2c8a1b8e1d2c8",
                      "name": "Akash Kumar"
                    },
                    "tags": ["tech", "guide"],
                    "coverImage": "https://cloudinary.com/cover.jpg",
                    "mood": "motivational",
                    "createdAt": "2024-07-16T00:00:00.000Z"
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Blog"],
        "summary": "Create a new blog",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Blog" },
              "example": {
                "title": "How to Build a Blog Platform",
                "content": "This is the blog content...",
                "tags": ["tech", "guide"],
                "coverImage": "https://cloudinary.com/cover.jpg",
                "mood": "motivational",
                "language": "en"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Blog created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Blog" },
                "example": {
                  "_id": "blogid1",
                  "title": "How to Build a Blog Platform",
                  "content": "This is the blog content...",
                  "summary": "A quick guide to building a blog platform.",
                  "author": {
                    "_id": "60f7c0b8e1d2c8a1b8e1d2c8",
                    "name": "Akash Kumar"
                  },
                  "tags": ["tech", "guide"],
                  "coverImage": "https://cloudinary.com/cover.jpg",
                  "mood": "motivational",
                  "createdAt": "2024-07-16T00:00:00.000Z"
                }
              }
            }
          }
        }
      }
    },
    "/blogs/{id}": {
      "get": {
        "tags": ["Blog"],
        "summary": "Get a blog by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Blog details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Blog" },
                "example": {
                  "_id": "blogid1",
                  "title": "How to Build a Blog Platform",
                  "content": "This is the blog content...",
                  "summary": "A quick guide to building a blog platform.",
                  "author": {
                    "_id": "60f7c0b8e1d2c8a1b8e1d2c8",
                    "name": "Akash Kumar"
                  },
                  "tags": ["tech", "guide"],
                  "coverImage": "https://cloudinary.com/cover.jpg",
                  "mood": "motivational",
                  "createdAt": "2024-07-16T00:00:00.000Z"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Blog"],
        "summary": "Update a blog",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Blog" },
              "example": {
                "title": "How to Build a Blog Platform (Updated)",

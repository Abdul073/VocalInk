        ],
        "responses": {
          "200": { "description": "Blog bookmarked" }
        }
      }
    },
    "/blogs/{id}/comments": {
      "get": {
        "tags": ["Comment"],
        "summary": "Get comments for a blog",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "List of comments" }
        }
      },
      "post": {
        "tags": ["Comment"],
        "summary": "Add a comment to a blog",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" },
                  "inlineRef": { "type": "string" }
                },
                "required": ["content"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Comment added" }
        }
      }
    },
    "/comments/{id}/reply": {
      "post": {
        "tags": ["Comment"],
        "summary": "Reply to a comment",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" }
                },
                "required": ["content"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Reply added" }
        }
      }
    },
    "/comments/{id}/report": {

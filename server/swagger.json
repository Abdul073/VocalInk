      }
    },
    "/blogs/{id}/tts": {
      "post": {
        "tags": ["Blog"],
        "summary": "Generate TTS audio for a blog",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "TTS audio generated" }
        }
      }
    },
    "/blogs/{id}/translate": {
      "post": {
        "tags": ["Blog"],
        "summary": "Translate blog content",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
